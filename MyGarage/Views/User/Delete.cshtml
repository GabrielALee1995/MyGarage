@model User

<div class="row">
   <div class="col-12 text-center">
      <h2> Are you sure you want to Delete Your Profile?</h2>
   </div>
</div>

<div class="row">
   <div class="col-12 text-center">
      <p>Deleting your profile will permanently delete all vehicles and related information!</p>
   </div>
</div>
<br />

<form method="post">
   <input type="hidden" asp-for="Id" />
   <input type="hidden" asp-for="Email" />
   <input type="hidden" asp-for="Password" />
   <input type="hidden" asp-for="IsAdmin" />
   <input type="hidden" asp-for="Vehicles" />

   <div class="row">
      <div class=" col-6 text-right">
         <a class="btn btn-cancel-2" asp-controller="User" asp-action="Details" asp-route-userId="@Model.Id">
            Cancel!
         </a>
      </div>
      <div class="col-6 text-left">
         <input type="submit" class="btn btn-confirm" value=" Delete My Profile" />
      </div>
   </div>
</form>