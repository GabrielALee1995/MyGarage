@model Repair

<div class="row">
   <div class="col-12 text-center">
      <h2 class="page-title">Delete @ViewBag.VehicleNickName's @Model.Type Repair?</h2>
   </div>
</div> 

<div class="row">
   <div class="col-12 text-center">
      @Model.Date.ToString("MMMM dd, yyyy")
   </div>
</div>

<div class="row">
   <div class="col-12 text-center">
      <p>Deleting will permanently delete this repair!</p>
   </div>
</div>

<form method="post">
   <input type="hidden" asp-for="Id" />
   <input type="hidden" asp-for="Type" />
   <input type="hidden" asp-for="Date" />
   <input type="hidden" asp-for="Location" />
   <input type="hidden" asp-for="Cost" />
   <input type="hidden" asp-for="VehicleMileage" />
   <input type="hidden" asp-for="WarrantyExpiration" />
   <input type="hidden" asp-for="Receipt" />
   <input type="hidden" asp-for="Photo" />
   <input type="hidden" asp-for="VehicleId" />
   <input type="hidden" asp-for="Vehicle" />

   <div class="row">
      <div class="col-6 text-right">
         <a class="btn btn-cancel-2" asp-controller="Repair" asp-action="Details" asp-route-repairId="@Model.Id">
            Cancel
         </a>
      </div>
      <div class="col-6 text-left">
         <input type="submit" class="btn btn-confirm" value="Delete Repair"/>
      </div>
   </div>
</form>